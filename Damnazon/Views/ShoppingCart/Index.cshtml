@model ShoppingCartViewModel

<h2>Shopping Cart</h2>
<table class="table table-bordered table-striped">
  <thead>
    <tr>
      <th>&nbsp;</th>
      <th>Quantity</th>
      <th>Product</th>
      <th class="text-right">Price</th>
      <th class="text-right">Subtotal</th>
    </tr>
  </thead>
  <tbody>
    @foreach(var item in Model.ShoppingCart.ShoppingCartItems)
    {
    <tr>
      <td class="text-left"><a asp-controller="ShoppingCart" asp-action="RemoveFromShoppingCart" asp-route-productId="@item.Product.ProductId" alt="">Decrease Quantity</a></td>
      <td class="text-center">@item.Quantity</td>
      <td class="text-left">@item.Product.ProductName</td>
      <td class="text-right">@item.Product.ProductPrice.ToString("c")</td>
      <td class="text-right">
        @((item.Quantity * item.Product.ProductPrice).ToString("c"))
      </td>
    </tr>
    }
  </tbody>
  <tfoot>
    <tr>
    <td colspan="4" class="text-right">Total</td>
    <td class="text-right">@Model.ShoppingCartTotalPrice.ToString("c")</td>
  </tr>
  </tfoot>
</table>

<div class="text-center">
  <a class="btn btn-primary" asp-controller="ShoppingCart" asp-action="ClearShoppingCart">Clear Cart</a>
  <a class="btn btn-primary" asp-controller="Order" asp-action="Checkout">Checkout</a>
</div>